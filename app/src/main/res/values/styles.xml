<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="android:windowAnimationStyle">@style/anima_activity</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackgroundStyle
        </item>
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="anima_activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out_anim</item>
    </style>

    <style name="CustomWindowTitleBackgroundStyle">
        <item name="android:background">@color/theme_title_background</item>
    </style>


    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextViewStyle.Gray">
        <item name="android:textColor">@color/gray_text_shallow</item>
    </style>

    <style name="TextViewStyle.Label">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <!-- 公用按钮样式 -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/corners_pink_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="LogoutButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/corners_gray_selector</item>
    </style>

    <style name="common_buttom_style_one">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_heigh</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="common_buttom_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_heigh</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/corners_confirm</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Tantransparent" parent="@android:style/Theme.Dialog">

        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/corners_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:textColorHint">@color/theme_hint</item>
    </style>

    <style name="EditTextStyle.Fillet" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@color/theme_hint</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/corners_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>

    <style name="EditTextStyle.NoPadding" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/corners_white_no_border</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Cell_Block_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Cell_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Cell_Small_Container" parent="Cell_Container">
        <item name="android:paddingTop">@dimen/margin_micro</item>
        <item name="android:paddingBottom">@dimen/margin_micro</item>
    </style>


    <style name="Cell_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_micro</item>
        <item name="android:layout_marginBottom">@dimen/margin_micro</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Cell_Text_Head" parent="Cell_Text">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Head_Image" parent="Cell_Text_Head">
        <item name="android:drawablePadding">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Value" parent="Cell_Text">
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="Cell_Text_Tail" parent="Cell_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Tail.Red">
        <item name="android:textColor">@color/theme_main_text</item>
    </style>

    <style name="Cell_Right_Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="Cell_Header_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/margin_micro</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Customer_RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio</item>
    </style>

    <style name="Customer_CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/btn_checkbox</item>
    </style>

    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_push_bottom_out</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">11dp</item>
        <item name="android:maxHeight">11dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="RatingBarStyle_Comment" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_ratingbar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="customer_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="tab_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tab_row_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@color/theme_divide_line</item>
        <item name="android:showDividers">end</item>
        <item name="android:orientation">vertical</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="tab_row_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:maxLength">20</item>

    </style>
    <style name="tab_row_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/theme_black_text</item>
        <item name="android:textSize">@dimen/text_size</item>

    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>