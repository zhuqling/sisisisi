<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/headportrait_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/head"
                android:textColor="@color/theme_black_text"
                android:textSize="@dimen/text_size" />

            <com.zongyou.library.widget.CircleImageView
                android:id="@+id/head1"
                android:layout_width="@dimen/image_height"
                android:layout_height="@dimen/image_height"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/no_headportaint"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
        <View
            android:id="@+id/view_least"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E4E4"
            />
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff_name"
                android:textSize="@dimen/text_size"
                android:textColor="@color/theme_black_text"/>

            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin_mid"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|right"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/theme_grey_text"
                android:textSize="@dimen/text_size" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/theme_divide_line"
            android:layout_marginLeft="@dimen/margin"/>
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff_mobile"
                android:textSize="@dimen/text_size"
                android:textColor="@color/theme_black_text"/>

            <TextView
                android:id="@+id/staff_mobile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin_mid"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|right"
                android:clickable="false"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/theme_grey_text"
                android:textSize="@dimen/text_size" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/theme_divide_line"
            android:layout_marginLeft="@dimen/margin"/>
        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff_pwd"
                android:textSize="@dimen/text_size"
                android:textColor="@color/theme_black_text"/>



            <TextView
                android:id="@+id/staff_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|right"
                android:maxLength="30"
                android:text="******"
                android:textColor="@color/theme_grey_text"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>