<?xml version="1.0" encoding="utf-8"?>
<com.yizan.community.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.yizan.community.widget.RoundAngleImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_square"
        app:roundHeight="@dimen/comm_corner"
        app:roundWidth="@dimen/comm_corner" />

    <ImageView 
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_del"
        android:paddingLeft="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</com.yizan.community.widget.SquareLayout>